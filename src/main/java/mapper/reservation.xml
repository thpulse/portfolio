<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kitri.reservation">
	<select id="call_hall_bySido" parameterType="String" resultType="place">
		select * from prf_place where sidonm =#{sido}		
	</select>
		
	<select id="call_hall_bygungu" parameterType="String" resultType="place">
		select * from prf_place where gugunnm = #{gungu}		
	</select>	
	
	<select id="call_perform_byHall" parameterType="String" resultType="perform">
		select * from performance where plcid = #{hallId}
	</select>
	
	<select id="perform_detail" parameterType="String" resultType="perform">
		select * from performance where prfid = #{prfid} and to_date(prfpdto)>=sysdate		
	</select>
	
	<insert id="insert_reservation" parameterType="reservation">
		insert into reservation values (#{reserv_num},#{reserv_date},#{user_id},#{prf_id},#{prf_day},#{prf_day_yo},#{prf_starttime},#{del_flg})		
	</insert>
	<insert id="insert_reservation_detail" parameterType="reservation_detail">
		insert into reservation_detail values (#{reserv_num},#{grade},#{seat},#{price})
	</insert>
	
	<select id="reservation_chk_byTime" parameterType="reservation" resultType="String">
		select reserv_num from reservation where prf_day=#{prf_day} and prf_starttime=#{prf_starttime} and prf_day_yo = #{prf_day_yo} and del_flg ='1'
	</select>
	
	<select id="reservation_chk_byDayTime" parameterType="reservation" resultType="String">
		select d.reserv_num from reservation r, reservation_detail d where r.reserv_num = d.reserv_num and r.prf_day=#{prf_day} and r.del_flg ='1'
	</select>
	
	<select id="reservation_chk_byTime_detail" parameterType="reservation" resultType="reservation">
		select d.reserv_num from reservation_detail d, reservation r where d.reserv_num = r.reserv_num and d.reserv_num=#{reserv_num} and r.del_flg='1'
	</select>
	
	<select id="preChk_byTime_detail" parameterType="reservation" resultType="String">
		select d.seat_num from reservation_detail d, reservation r where d.reserv_num = r.reserv_num and d.reserv_num=#{reserv_num} and r.del_flg='1'
	</select>
	
	
</mapper>











